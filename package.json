{
  "name": "liquity",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/mocha",
      "**/@nomiclabs/*",
      "**/*buidler*",
      "**/solidity-coverage",
      "**/ts-node",
      "**/typescript",
      "**/eslint*",
      "**/@typescript-eslint/*"
    ]
  },
  "scripts": {
    "compile:contracts": "yarn workspace @liquity/contracts compile",
    "build:decimal": "yarn workspace @liquity/decimal build",
    "build:lib": "yarn workspace @liquity/lib build",
    "build:providers": "yarn workspace @liquity/providers build",
    "build:dev-frontend": "yarn workspace @liquity/dev-frontend build",
    "bootstrap": "yarn install --frozen-lockfile && yarn compile:contracts && yarn build:decimal && yarn build:lib && yarn build:providers",
    "build": "yarn bootstrap && yarn build:dev-frontend",
    "start:dev-frontend": "yarn workspace @liquity/dev-frontend start",
    "test:contracts": "yarn workspace @liquity/contracts test",
    "test:decimal": "yarn workspace @liquity/decimal test",
    "test:lib": "yarn workspace @liquity/lib test",
    "test": "yarn test:contracts && yarn test:decimal && yarn test:lib"
  }
}
