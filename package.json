{
  "name": "liquity",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/mocha",
      "**/@nomiclabs/*",
      "**/*buidler*",
      "**/solidity-coverage",
      "**/ts-node",
      "**/typescript",
      "**/eslint*",
      "**/@typescript-eslint/*"
    ]
  },
  "scripts": {
    "check-abi": "yarn workspace @liquity/lib check-abi",
    "build": "run-s build:*",
    "build:dev-frontend": "yarn workspace @liquity/dev-frontend build",
    "deploy": "yarn workspace @liquity/lib buidler deploy",
    "prepare": "run-s prepare:*",
    "prepare:contracts": "yarn workspace @liquity/contracts prepare",
    "prepare:decimal": "yarn workspace @liquity/decimal prepare",
    "prepare:lib": "yarn workspace @liquity/lib prepare",
    "prepare:providers": "yarn workspace @liquity/providers prepare",
    "start:dev-chain": "docker run --name openethereum --rm -d -p 127.0.0.1:8545:8545/tcp -p 127.0.0.1:8546:8546/tcp liquity/openethereum --config dev-insecure --jsonrpc-cors all --ws-interface all --ws-hosts all --ws-origins all",
    "stop:dev-chain": "docker kill openethereum",
    "start:dev-frontend": "yarn workspace @liquity/dev-frontend start",
    "test": "run-s test:*",
    "test:contracts": "yarn workspace @liquity/contracts test",
    "test:decimal": "yarn workspace @liquity/decimal test",
    "test:lib": "yarn workspace @liquity/lib test",
    "test:dev-frontend": "run-s --continue-on-error test:dev-frontend:*",
    "test:dev-frontend:start-dev-chain": "yarn start:dev-chain",
    "test:dev-frontend:deploy": "yarn deploy --network dev",
    "test:dev-frontend:prepare-lib": "yarn prepare:lib",
    "test:dev-frontend:run": "yarn workspace @liquity/dev-frontend test --watchAll=false --forceExit --detectOpenHandles",
    "test:dev-frontend:stop-dev-chain": "yarn stop:dev-chain"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
