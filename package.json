{
  "name": "liquity",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**"
    ]
  },
  "scripts": {
    "compile:contracts": "yarn workspace @liquity/contracts compile",
    "build:lib": "yarn workspace @liquity/lib build",
    "build:frontend": "yarn workspace @liquity/frontend build",
    "bootstrap": "yarn install --frozen-lockfile && yarn compile:contracts && yarn build:lib",
    "build": "yarn bootstrap && yarn build:frontend",
    "test:contracts": "yarn workspace @liquity/contracts test",
    "test:lib": "yarn workspace @liquity/lib test",
    "test": "yarn test:contracts && yarn test:lib"
  }
}
